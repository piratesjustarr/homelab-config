FROM python:3.11-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    git \
    curl \
    jq \
    && rm -rf /var/lib/apt/lists/*

# Copy agent framework, requirements, and code agent
COPY agents/ agents/
COPY agent-executors/ agent-executors/
COPY requirements.txt .

# Install Python dependencies (remove ollama, use standard libs only)
RUN pip install --no-cache-dir -r requirements.txt

# Copy code agent handler
COPY agent-executors/code-agent.py executor.py

# Create log directory
RUN mkdir -p /var/log && touch /var/log/yggdrasil-agent.log

# Health check on port 5001
HEALTHCHECK --interval=30s --timeout=5s --start-period=10s --retries=3 \
    CMD curl -f http://localhost:5001/health || exit 1

EXPOSE 5001

# Run code agent on port 5001
# Expects LLM_HOST (e.g., localhost:8080 for ramalama or ollama)
# Expects LLM_MODEL (e.g., granite-code:8b)
CMD ["python3", "executor.py"]
